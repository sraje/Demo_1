<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Video.js VAST Example</title>
    <link href="//amp.azure.net/libs/amp/1.4.0/skins/amp-default/azuremediaplayer.min.css" rel="stylesheet">
    <link href="videojs.ads.css" rel="stylesheet" type="text/css">
    <link href="videojs.vast.css" rel="stylesheet" type="text/css">
    <style type="text/css">
        .description {
            background-color: #eee;
            border: 1px solid #777;
            padding: 10px;
            font-size: .8em;
            line-height: 1.5em;
            font-family: Verdana, sans-serif;
        }

        .example-video-container {
            display: inline-block;
        }
    </style>
    <!--[if lt IE 9]><script src="lib/es5.js"></script><![endif]-->
    <script src="//amp.azure.net/libs/amp/1.4.0/azuremediaplayer.min.js"></script>
    <script src="videojs.ads.js"></script>
    <script src="vast-client.js"></script>
    <script src="videojs.vast.js"></script>
</head>
<body>
    <p class="description">AMP VAST plugin examples.</p>
    <div class="example-video-container">
        <p class="description">No autoplay.</p>
        <video id="vid1" class="azuremediaplayer amp-default-skin" controls preload="auto"
               poster="test_demo_poster_text.png"
               data-setup='{}'
               width='640'
               height='400'>
            <!--<source src="http://video-js.zencoder.com/oceans-clip.mp4" type='video/mp4'>
            <source src="http://video-js.zencoder.com/oceans-clip.webm" type='video/webm'>
            <source src="http://video-js.zencoder.com/oceans-clip.ogv" type='video/ogg'>-->
            <source src="http://srajetestservice.streaming.mediaservices.windows.net/8de9e40d-7803-4b18-a0ff-7b0cd767283e/Chihuahua_Bubbles_-_Some_Cute_Slow_Motion.ism/Manifest" type="application/vnd.ms-sstr+xml">

            <p>Video Playback Not Supported</p>
        </video>
    </div>
    <div class="example-video-container">
        <p class="description">With autoplay.</p>
        <video id="vid2" class="azuremediaplayer amp-default-skin" autoplay controls preload="auto"
               poster=""
               data-setup='{}'
               width='640'
               height='400'>
            <source src="http://srajetestservice.streaming.mediaservices.windows.net/8de9e40d-7803-4b18-a0ff-7b0cd767283e/Chihuahua_Bubbles_-_Some_Cute_Slow_Motion.ism/Manifest" type="application/vnd.ms-sstr+xml">
            <!--<source src="http://video-js.zencoder.com/oceans-clip.mp4" type='video/mp4'>
                <source src="http://video-js.zencoder.com/oceans-clip.webm" type='video/webm'>
              <source src="http://video-js.zencoder.com/oceans-clip.ogv" type='video/ogg'>-->
            <p>Video Playback Not Supported</p>
        </video>
    </div>
    <script>
        var vid1 = videojs('vid1'),
            vid2 = videojs('vid2');

        // vid1.muted(true);
        vid1.ads();
        vid1.vast({
            url: 'http://videoads.theonion.com/vast/270.xml'
        });

        //  vid2.muted(true);
        vid2.ads();
        vid2.vast({
            url: 'http://videoads.theonion.com/vast/270.xml'
        });
    </script>
</body>
</html>
